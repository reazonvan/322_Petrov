<Page x:Class="_322_Petrov.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_322_Petrov"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePassPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="2" Grid.Column="1" 
    Content="Логин:" 
    HorizontalAlignment="Right" VerticalAlignment="Center"
    Margin="0,0,10,0"/>
        <TextBox x:Name="TbLogin" Grid.Row="2" Grid.Column="2" 
  HorizontalAlignment="Left" VerticalAlignment="Center"
  Width="200" ToolTip="Введите ваш логин"/>

        <Label Grid.Row="3" Grid.Column="1" 
Content="Текущий пароль:" 
HorizontalAlignment="Right" VerticalAlignment="Center"
Margin="0,0,10,0"/>
        <PasswordBox x:Name="CurrentPasswordBox" Grid.Row="3" Grid.Column="2" 
  HorizontalAlignment="Left" VerticalAlignment="Center"
  Width="200" ToolTip="Введите текущий пароль"/>

        <Label Grid.Row="4" Grid.Column="1" 
Content="Новый пароль:" 
HorizontalAlignment="Right" VerticalAlignment="Center"
Margin="0,0,10,0"/>
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="4" Grid.Column="2" 
      HorizontalAlignment="Left" VerticalAlignment="Center"
      Width="200" ToolTip="Введите новый пароль"/>

        <Label Grid.Row="5" Grid.Column="1" 
    Content="Подтвердите пароль:" 
    HorizontalAlignment="Right" VerticalAlignment="Center"
    Margin="0,0,10,0"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="5" Grid.Column="2" 
  HorizontalAlignment="Left" VerticalAlignment="Center"
  Width="200" ToolTip="Повторите новый пароль"/>

        <Button x:Name="SaveButton" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
 Content="Сохранить" 
 Width="150" Height="30" 
 HorizontalAlignment="Center"
 Margin="0,20,0,0" 
 Click="SaveButton_Click" 
 ToolTip="Сохранить новый пароль"/>
    </Grid>
</Page>
