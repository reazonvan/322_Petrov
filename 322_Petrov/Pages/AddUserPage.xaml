<Page x:Class="_322_Petrov.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_322_Petrov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUserPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин:" 
  Grid.Row="1" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <TextBox x:Name="TBLogin" Text="{Binding Login}" 
Grid.Row="1" Grid.Column="1"
Height="25" Margin="5"
ToolTip="Введите логин"/>

        <TextBlock Text="Пароль:" 
  Grid.Row="2" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <PasswordBox x:Name="TBPass"
    Grid.Row="2" Grid.Column="1"
    Height="25" Margin="5"
    ToolTip="Введите пароль"/>

        <TextBlock Text="Роль:" 
  Grid.Row="3" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <ComboBox Name="cmbRole" SelectedItem="{Binding Role}" 
 Grid.Row="3" Grid.Column="1"
 Height="25" Margin="5"
 ToolTip="Выберите роль">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="User"/>
        </ComboBox>

        <TextBlock Text="ФИО:" 
  Grid.Row="4" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <TextBox x:Name="TBFio" Text="{Binding FIO}" 
Grid.Row="4" Grid.Column="1"
Height="25" Margin="5"
ToolTip="Введите ФИО"/>

        <TextBlock Text="Фото:" 
  Grid.Row="5" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <TextBox x:Name="TBPhoto" Text="{Binding Photo}" 
Grid.Row="5" Grid.Column="1"
Height="25" Margin="5"
ToolTip="Путь к фото (необязательно)"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" 
   Orientation="Horizontal" 
   HorizontalAlignment="Center" 
   Margin="0,20,0,0">
            <Button x:Name="ButtonClean" Content="Очистить" 
   Width="100" Height="30" Margin="0,0,10,0"
   Click="ButtonClean_Click"/>
            <Button x:Name="ButtonSave" Content="Сохранить" 
   Width="100" Height="30" Margin="10,0,0,0"
   Click="ButtonSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
