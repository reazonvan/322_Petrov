<Page x:Class="_322_Petrov.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_322_Petrov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
  Orientation="Horizontal" 
  HorizontalAlignment="Center"
  Margin="10">

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Поиск по ФИО" FontSize="12"/>
                <TextBox x:Name="fioFilterTextBox" 
       Width="150" 
       Height="25" 
       Margin="0,5,0,0"
       TextChanged="fioFilterTextBox_TextChanged"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Сортировка" FontSize="12"/>
                <ComboBox x:Name="sortComboBox" 
        Width="150" 
        Height="25" 
        Margin="0,5,0,0"
        SelectedIndex="0"
        SelectionChanged="sortComboBox_SelectionChanged">
                    <ComboBoxItem Content="По возрастанию"/>
                    <ComboBoxItem Content="По убыванию"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Фильтр по роли" FontSize="12"/>
                <CheckBox x:Name="onlyAdminCheckBox" 
        Content="Только администраторы" 
        Margin="0,5,0,0"
        Checked="onlyAdminCheckBox_Checked"
        Unchecked="onlyAdminCheckBox_Unchecked"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Действия" FontSize="12"/>
                <Button x:Name="clearFiltersButton" 
      Content="Очистить фильтр" 
      Width="120" 
      Height="25" 
      Margin="0,5,0,0"
      FontSize="11"
      Click="clearFiltersButton_Click_1"/>
            </StackPanel>

        </StackPanel>

        <ListView Name="ListUser" 
Grid.Row="1" 
HorizontalContentAlignment="Center"
ScrollViewer.HorizontalScrollBarVisibility="Disabled"
Margin="10">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10" Width="220">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                 Text="{Binding FIO}" 
                 TextWrapping="Wrap"
                 HorizontalAlignment="Center" 
                 FontSize="16"
                 FontWeight="Bold"
                 Margin="0,0,0,5"/>

                        <Image Grid.Row="1" 
             Width="200" 
             Stretch="UniformToFill"
             HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="Photo">
                                    <Binding.TargetNullValue>
                                        <BitmapImage UriSource="/images/image.png"/>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Grid.Row="2" 
                 Text="{Binding Role}" 
                 HorizontalAlignment="Center" 
                 FontSize="14"
                 Margin="0,5,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
