<Page x:Class="_322_Petrov.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_322_Petrov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCategoryPage">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название категории:" 
  Grid.Row="1" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <TextBox x:Name="TBCategoryName" Text="{Binding Name}" 
Grid.Row="1" Grid.Column="1"
Height="25" Margin="5"
ToolTip="Введите название категории"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" 
   Orientation="Horizontal" 
   HorizontalAlignment="Center" 
   Margin="0,30,0,0">
            <Button x:Name="ButtonClean" Content="Очистить" 
   Width="100" Height="30" Margin="0,0,10,0"
   Click="ButtonClean_Click"/>
            <Button x:Name="ButtonSaveCategory" Content="Сохранить" 
   Width="100" Height="30" Margin="10,0,0,0"
   Click="ButtonSaveCategory_Click"/>
        </StackPanel>
    </Grid>
</Page>
