<Page x:Class="_322_Petrov.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_322_Petrov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPaymentPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название платежа:" 
  Grid.Row="1" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <TextBox x:Name="TBPaymentName" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
Grid.Row="1" Grid.Column="1"
Height="25" Margin="5"
ToolTip="Введите название платежа"/>

        <TextBlock Text="Сумма:" 
  Grid.Row="2" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <TextBox x:Name="TBAmount" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" 
Grid.Row="2" Grid.Column="1"
Height="25" Margin="5"
ToolTip="Введите сумму платежа"/>

        <TextBlock Text="Количество:" 
  Grid.Row="3" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <TextBox x:Name="TBCount" Text="{Binding Num, UpdateSourceTrigger=PropertyChanged}" 
Grid.Row="3" Grid.Column="1"
Height="25" Margin="5"
ToolTip="Введите количество"/>

        <TextBlock Text="Дата:" 
  Grid.Row="4" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <DatePicker x:Name="DPDate" SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}" 
   Grid.Row="4" Grid.Column="1"
   Height="25" Margin="5"
   ToolTip="Выберите дату платежа"/>

        <TextBlock Text="Клиент:" 
  Grid.Row="5" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <ComboBox x:Name="CBUser" 
 Grid.Row="5" Grid.Column="1"
 Height="25" Margin="5"
 SelectedValuePath="ID" 
 DisplayMemberPath="FIO"
 SelectedValue="{Binding UserID, UpdateSourceTrigger=PropertyChanged}"
 ToolTip="Выберите клиента"/>

        <TextBlock Text="Категория:" 
  Grid.Row="6" Grid.Column="0"
  VerticalAlignment="Center" Margin="5"
  FontSize="14"/>
        <ComboBox x:Name="CBCategory" 
 Grid.Row="6" Grid.Column="1"
 Height="25" Margin="5"
 SelectedValuePath="ID" 
 DisplayMemberPath="Name"
 SelectedValue="{Binding CategoryID, UpdateSourceTrigger=PropertyChanged}"
 ToolTip="Выберите категорию"/>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" 
   Orientation="Horizontal" 
   HorizontalAlignment="Center" 
   Margin="0,30,0,0">
            <Button x:Name="ButtonClean" Content="Очистить" 
   Width="100" Height="30" Margin="0,0,10,0"
   Click="ButtonClean_Click"/>
            <Button x:Name="ButtonSave" Content="Сохранить" 
   Width="100" Height="30" Margin="10,0,0,0"
   Click="ButtonSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
